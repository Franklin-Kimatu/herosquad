{{#partial "content"}}
    <h1>Your Squad</h1>
    <p>Add a new Squad</p>
    <form action="/squads/list" method="post" class="form-group">

        <label for="squadName">Squad Name</label>
            <input id="squadName" type="text" name ="squadName" class="form-control">

        <label for="squadNumber">Maximum Squad Size</label>
            <input id="squadNumber" type="text" name="squadNumber" class="form-control">

        <label for="cause">Cause of Squad</label>
            <input id="squadCause" type="text" name="squadCause" class="form-control">
        <br>

        <button type="submit" class="btn btn-default">Add Squad</button>
    </form>

{{/partial}}
{{>layout.hbs}}